<%- include('../partials/header') %>

<section class="container p-3 text-center">
  
  <h1><%= attraction.title %></h1>

  <div class="row my-5">

    <div class="col-auto">
      <img class="img-fluid" src= <%= attraction.image %> />
    </div>

    <div class="col d-flex align-items-center">
      <div class="card-block px-2">

        <p class="lead"><%=attraction.address%></p>

        <p class="card-text"><%= attraction.description %></p>

        <div class="d-flex justify-content-evenly">
          <a class="btn btn-secondary btn-width" href="/attractions/<%=attraction._id%>/edit">
          Edit
          </a>

          <form method="POST" action="/attractions/<%=attraction._id%>?_method=DELETE">
            <button type="submit" class="btn btn-danger btn-width">Delete</button>
          </form>

        </div>
        

      </div>
    </div>
  </div>

</section>
 


<section class="container">
  <h3>Reviews</h3>

  <form 
    id="add-comment-form" 
    method="POST" 
    action="/attractions/<%= attraction._id %>/comments">

    <div class="d-flex">
      <div class="h2 mx-1"><i class="bi bi-person-circle"></i></div>
      <div>
        <input type="text" class="form-control" name="content" placeholder="Add a comment...">
      </div>

      <div>
        <select class="form-select form-select-md" name="rating">
          <option selected>Rating</option>
          <option value="1">5</option>
          <option value="2">4</option>
          <option value="3">3</option>
          <option value="3">2</option>
          <option value="3">1</option>
        </select>
      </div>
      
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </div>

  </form>



  <div class="row height d-flex justify-content-center align-items-center">
    <div class="col-md-7">
      <div class="card">

        <div class="p-3">
          <h6>Comments</h6>
        </div>
        <!-- Add a Comment -->
        <div class="mt-3 d-flex flex-row align-items-center p-3 form-color">
          <div class="h2 mx-1">
            <i class="bi bi-person-circle"></i>
          </div>
          <input type="text" class="form-control" name="content" placeholder="Add a comment...">
        </div>
  
        <!-- Show Existing Comments Attempt 1-->
        Attempt 1
        <% attraction.comments.forEach(function(comment) { %>
          <div class="d-flex flex-row justify-content-evenly">
            <div class="d-flex align-items-center h2">
              <i class="bi bi-person-circle"></i>
            </div>
            <div class="d-flex align-items-center">
                <p> <%= comment.content %> </p>
            </div>u
            <div class="d-flex ">
              <%= comment.rating %> / 5
            </div>
          <% }); %>
      </div>
    </div>
  </div>



  <h2>Comments</h2>

  <form id="add-comment-form" method="POST" action="/attractions/<%= attraction._id %>/comments">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value="Add Comment">
  </form>

  <% if (attraction.comments.length) { %>
    <table>
      <thead>
        <tr>
          <th>Comment</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% attraction.comments.forEach(function(comment) { %>
          <tr>
            <td>
              <%= comment.content %>
            </td>
            <td>
              <%= comment.rating %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <% } else { %>
      <h5>No Comments Yet</h5>
      <% } %>

</section>
  
  