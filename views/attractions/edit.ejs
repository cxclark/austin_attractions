<%- include('../partials/header') %>

<section class="container mt-3 text-center">
  <h1 class="p-3 emphasis-font">Edit <%= attraction.title %></h1>

  <div class="row my-5">

    <div class="col-auto">
      <img class="img-fluid resized-md" src= <%= attraction.image %> />
    </div>

    <div class="col d-flex align-items-center">
      <div class="card-block px-2">
        <p class="lead"><%=attraction.address%></p>
        <p class="card-text"><%= attraction.description %></p>
      </div>
    </div>
  </div>
</section>

<section class="container">
  
  <div class="row justify-content-center my-5">
    <div class="col-lg-6">
    
      <form method="POST" action="/attractions/<%=attraction._id%>?_method=PATCH">

        <label class="form-label">Update Title:</label>
        <input type="text" class="form-control" name="title" value="<%=attraction.title%>" >
        
        <label class="form-label">Update Address:</label>
        
        <input type="text" class="form-control" name="address" value="<%=attraction.address%>" >

        <div class="mb-3 mt-4">
          <label class="form-label">Update Description</label>
          <textarea 
            type="text" 
            class="form-control" 
            name="description" 
            rows="3">
            <%=attraction.description%>
          </textarea>
        </div>
        
        <div class="mb-5">
          <label class="form-label">Update Image:</label>
          <input class="form-control text-muted" type="file" name="image">
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary">Edit Attraction</button>
        </div>

      </form>

    </div>
  </div>
</section>
